FROM registry.access.redhat.com/ubi9/ubi:9.1.0

ARG stkenginerpm
ARG stkenginedatarpm
ARG rpmctxpath

COPY ${rpmctxpath}${stkenginerpm} /tmp/
COPY ${rpmctxpath}${stkenginedatarpm} /tmp/

RUN set -x && dnf -q -y install \
    /tmp/${stkenginerpm} \
    /tmp/${stkenginedatarpm} \
 && dnf clean all \
 && rm -f \
    /tmp/${stkenginerpm} \
    /tmp/${stkenginedatarpm}

ENV STK_INSTALL_DIR /usr/ansys_inc

RUN useradd tester
USER tester
ENV STK_CONFIG_DIR /home/tester/Documents
RUN /usr/ansys_inc/bin/stkxnewuser --allowOnline=no
CMD [ "/usr/ansys_inc/bin/connectconsole", "--new", "--nographics", "--interactive" ]
